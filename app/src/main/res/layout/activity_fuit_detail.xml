<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/_18sdp">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/black20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_14sdp">

                <TextView
                    android:id="@+id/name_txt"
                    style="@style/title_item"
                    android:text="" />

                <TextView
                    android:id="@+id/description_txt"
                    style="@style/text_item"
                    android:text="" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
<!--                    <Button-->
<!--                        android:id="@+id/back_bt"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_marginTop="@dimen/_18sdp"-->
<!--                        android:backgroundTint="@color/deepPink"-->
<!--                        android:textColor="@color/white"-->
<!--                        android:text="Voltar" />-->
                    <Button
                        android:id="@+id/remove_bt"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:backgroundTint="@color/deepPink"
                        android:textColor="@color/white"
                        android:text="Remover" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
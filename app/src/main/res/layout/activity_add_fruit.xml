<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/_18sdp">
            <RelativeLayout
                android:id="@+id/select_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:adjustViewBounds="true"
                    android:background="@color/black20" />
                <TextView
                    android:id="@+id/select_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecione uma imagem"
                    android:textColor="@color/white"
                    style="@style/text_item"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_14sdp">

                <EditText
                    android:id="@+id/name_txt"
                    style="@style/input"
                    android:hint="Digite o nome da fruta"/>

                <EditText
                    android:id="@+id/description_txt"
                    style="@style/input"
                    android:inputType="textMultiLine"
                    android:maxLines="20"
                    android:lines="4"
                    android:scrollHorizontally="false"
                    android:gravity="top"
                    android:hint="Digite a descrição da fruta."/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/add_bt"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:backgroundTint="@color/deepPink"
                        android:textColor="@color/white"
                        android:text="Adicionar" />

                    <Button
                        android:id="@+id/cancel_bt"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:backgroundTint="@color/deepPink"
                        android:textColor="@color/white"
                        android:text="Cancelar" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>